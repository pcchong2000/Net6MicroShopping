<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Shopping.UI.MemberApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Shopping.UI.MemberApp"
    
    >
    <TabBar>
        <ShellContent Title="首页"
                     Icon="tab_home.svg"
                      x:Name="homeTabItem"
                     ContentTemplate="{DataTemplate local:HomeView}" />
        <ShellContent Title="分类"
                     Shell.TabBarIsVisible="false"
                     Icon="tab_favorites.svg"
                     
                     ContentTemplate="{DataTemplate local:ProductCategoryView}" />
        <ShellContent Title="购物车"
                     Icon="tab_map.svg"
                     
                     ContentTemplate="{DataTemplate local:ShopCartView}" />
        <ShellContent Title="我"
                     Icon="tab_settings.svg"
                     ContentTemplate="{DataTemplate local:MyIndexView}" />
    </TabBar>
    

</Shell>
